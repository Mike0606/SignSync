<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:padding="16dp">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Welcome to Sign Sync!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Camera Button -->
    <Button
        android:id="@+id/button_cam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Capture Image from Camera"
        app:layout_constraintTop_toBottomOf="@id/welcome_tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        android:elevation="4dp"/>

    <!-- Image Captured from Camera -->
    <ImageView
        android:id="@+id/img_capture"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/button_cam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Remove Image Button for Camera -->
    <ImageView
        android:id="@+id/remove_image_cam"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:visibility="gone"
        android:contentDescription="Remove captured image"
        android:background="?attr/selectableItemBackground"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="@id/img_capture"
        app:layout_constraintEnd_toEndOf="@id/img_capture"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-10dp" />

    <!-- Divider Line (Optional) -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/img_capture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <!-- OR Text -->
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/img_capture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Gallery Button -->
    <Button
        android:id="@+id/button_pick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pick Image from Gallery"
        app:layout_constraintTop_toBottomOf="@id/or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        android:elevation="4dp" />

    <!-- Image Picked from Gallery -->
    <ImageView
        android:id="@+id/img_gallery"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/button_pick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Remove Image Button for Gallery -->
    <ImageView
        android:id="@+id/remove_image_gallery"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:visibility="gone"
        android:contentDescription="Remove selected image"
        android:background="?attr/selectableItemBackground"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="@id/img_gallery"
        app:layout_constraintEnd_toEndOf="@id/img_gallery"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-10dp" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <!-- Navigation Host Fragment -->
    <fragment
        android:id="@+id/nav_host_fragment_activity_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>
